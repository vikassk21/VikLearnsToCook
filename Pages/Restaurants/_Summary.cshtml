@using VikLearnsToCook.Core
@model Restaurant 

<br/>
<div class="card">
    <div class="card-header">
        <h3>@Model.Name</h3>
    </div>
    <div class="card-body">
        <span>Cuisine: @Model.Cusine;</span>
        <span>Location: @Model.Location</span>
    </div>
    <div class="card-footer">
        <a class="btn btn-outline-dark"
           asp-page="./Detail"
           asp-route-restaurantId="@Model.Id">
            Detail
        </a>

        <a class="btn btn-outline-dark"
           asp-page="./Edit"
           asp-route-restaurantId="@Model.Id">
            Edit
        </a>

        <a class="btn btn-outline-dark"
           asp-page="./Delete"
           asp-route-restaurantId="@Model.Id">
            Delete
        </a>
    </div>
</div>